generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Word {
  id             BigInt    @id @default(autoincrement()) @db.BigInt
  createdAt      DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  word           String?   @default("")
  isCurrentWord  Boolean?  @default(false) @map("is_current_word")

  @@map("words")
}
